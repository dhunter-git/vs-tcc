{
	"name": "vs-tcc",
	"displayName": "TCC Compiler",
	"description": "Extension to simplify use of Tiny C Compiler in VSCode.",
	"version": "1.0.0",
	"publisher": "nikomedes",
	"bugs": {
		"url": "https://github.com/nikomedes/vs-tcc/issues"
	},
	"homepage": "https://github.com/nikomedes/vs-tcc/blob/main/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/nikomedes/vs-tcc"
	},
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Languages",
		"Other"
	],
	"activationEvents": [
		"onLanguage:c"
	],
	"main": "./out/src/main",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Tiny C Compiler configuration",
			"properties": {
				"TCC.flags": {
					"type": [
						"string",
						"null"
					],
					"default": null,
					"description": "Flags for compiling the file."
				},
				"TCC.args": {
					"type": [
						"string",
						"null"
					],
					"default": null,
					"description": "Default arguments for running the program."
				}
			}
		},
		"commands": [
			{
				"command": "tcc.run",
				"title": "Run",
				"category": "TCC",
				"description": "Run with the current configuration"
			},
			{
				"command": "tcc.compile",
				"title": "Compile",
				"category": "TCC",
				"description": "Compile with the current configuration"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^2.0.3",
		"vscode": "^1.0.0",
		"mocha": "^2.3.3",
		"@types/node": "^6.0.40",
		"@types/mocha": "^2.2.32"
	}
}
