{
	"name": "vs-tcc",
	"displayName": "Tiny-C Compiler tcc",
	"description": "Tiny-C compiler (tcc) for Visual Studio Code.",
	"version": "1.0.2",
	"publisher": "nikomedes",
    "icon": "tcc-logo.png",
	"homepage": "https://github.com/nikomedes/vs-tcc/blob/main/README.md",
	"repository": {
		"type": "git",
		"url": "https://github.com/nikomedes/vs-tcc"
	},
	"engines": {
		"vscode": "^1.0.0"
	},
	"categories": [
		"Languages",
		"Other"
	],
	"activationEvents": [
		"onLanguage:c",
        "onCommand:tcc.run",
        "onCommand:tcc.compile"
	],
	"main": "./out/src/main",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Tiny-C Compiler configuration",
			"properties": {
				"TCC.flags": {
					"type": [
						"string",
						"null"
					],
					"default": null,
					"description": "Flags for compiling the file."
				},
				"TCC.args": {
					"type": [
						"string",
						"null"
					],
					"default": null,
					"description": "Default arguments for running the program."
				}
			}
		},
		"commands": [
			{
				"command": "tcc.run",
				"title": "Run",
				"category": "TCC",
				"description": "Run with the current configuration"
			},
			{
				"command": "tcc.compile",
				"title": "Compile",
				"category": "TCC",
				"description": "Compile with the current configuration"
			}
		],
        "keybindings": [
            {
                "command": "tcc.run",
                "key": "F10"
            },
            {
                "command": "tcc.compile",
                "key": "F11"
            }
        ]
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"vscode": "^1.0.0",
		"@types/node": "^6.0.40",
		"typescript": "^4.5.2"
	}
}
